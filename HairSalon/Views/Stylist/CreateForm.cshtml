@{
  Layout = "_Layout";
}

<h1>Create Stylist</h1>

<form action="/Stylists" method="post">
  <div class="homepage">
  <br>
    <label for="newName">Stylist Name:</label>
    <input type="text" name="newName" required>
  </div>
  <div class="homepage">
    <label for="newDetail">Stylist Detail:</label>
    <input type="text" name="newDetail" required>
    <br>
    <button type="submit" class="">ADD</button>
  </div>
</form>

<div class="homepage">
  <h3><a href="/">Home</a></h3>
  <h3><a href="/Stylists">List of Stylist</a></h3>
</div>
