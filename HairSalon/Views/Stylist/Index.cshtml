@{
  Layout = "_Layout";
}

<h1>Salon Stylist List</h1>
<ul>
  @foreach(var Stylist in Model)
  {
    <form action="/Stylists/delete" method="post">
    <li><a href ="Stylists/@Stylist.GetId()">
      @Stylist.GetName()</a>: @Stylist.GetDetail():
      <input type="number" name="deleteId" value="@Stylist.GetId()" hidden>
      <button type="submit" name="button">Delete</button></li></form>
  }
</ul>

<h3><a href="/">Home</a></h3>
<h3><a href="/Stylists">List of Salon Stylist</a></h3>
<h3><a href="/Stylists/new">Add New Stylist</a></h3>
